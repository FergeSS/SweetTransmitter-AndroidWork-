<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menuLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <ImageView
        android:id="@+id/menuFrame"
        android:layout_width="365dp"
        android:layout_height="844dp"

        android:background="@drawable/frame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/slideMenuButtonMenu"
        android:layout_width="35dp"
        android:layout_height="26dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/slide_menu_selector"
        app:layout_constraintEnd_toEndOf="@+id/menuFrame"
        app:layout_constraintTop_toTopOf="@+id/menuFrame" />

    <LinearLayout
        android:id="@+id/slideMenuLinear"
        android:layout_width="wrap_content"
        android:layout_height="295dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="150dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/menuFrame"
        app:layout_constraintTop_toTopOf="@+id/menuFrame">


        <ImageButton
            android:id="@+id/slideMenuButtonHistory"
            android:layout_width="181dp"
            android:layout_height="35dp"
            android:background="@drawable/history_selector" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/slideMenuButtonPolicy"
            android:layout_width="153dp"
            android:layout_height="35dp"
            android:background="@drawable/policy_selector" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/slideMenuButtonRating"
            android:layout_width="143dp"
            android:layout_height="35dp"
            android:background="@drawable/rating_selector" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/slideMenuButtonAbout"
            android:layout_width="114dp"
            android:layout_height="35dp"
            android:background="@drawable/about_selector" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/slideMenuButtonExit"
            android:layout_width="64dp"
            android:layout_height="35dp"
            android:background="@drawable/exit_selector" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/slideMenuLinear"
        app:layout_constraintTop_toBottomOf="@+id/slideMenuLinear"
        android:layout_marginTop="80dp"
        android:layout_marginStart="100dp">

        <ImageButton
            android:id="@+id/dialogueExit"
            android:layout_width="64dp"
            android:layout_height="35dp"
            android:visibility="invisible"
            android:background="@drawable/exit_selector" />
        <ImageButton
            android:id="@+id/dialogueStay"
            android:layout_width="64dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:visibility="invisible"
            android:background="@drawable/stay_selector"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
