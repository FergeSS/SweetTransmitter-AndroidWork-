<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/layoutOrderThx"
    android:layout_width="261dp"
    android:layout_height="567dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/frameCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/frame_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="230dp"
        android:layout_height="129dp"
        android:background="@drawable/group_123"
        app:layout_constraintBottom_toBottomOf="@id/layoutOrderThx"
        app:layout_constraintTop_toTopOf="@id/layoutOrderThx"
        app:layout_constraintEnd_toEndOf="@id/layoutOrderThx"
        app:layout_constraintStart_toStartOf="@+id/layoutOrderThx" />




    <ImageButton
        android:id="@+id/cardMenu"
        android:layout_width="170dp"
        android:layout_height="40dp"

        app:layout_constraintEnd_toEndOf="@+id/layoutOrderThx"
        app:layout_constraintStart_toStartOf="@+id/layoutOrderThx"
        app:layout_constraintBottom_toBottomOf="@id/layoutOrderThx"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button_menu_selector"/>

</androidx.constraintlayout.widget.ConstraintLayout>
