<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menuLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/menuFrame"
        android:layout_width="239dp"
        android:layout_height="552dp"

        android:src="@drawable/frame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/slideMenuButtonMenu"
        android:layout_width="35dp"
        android:layout_height="26dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/slide_menu_selector"
        app:layout_constraintEnd_toEndOf="@+id/menuFrame"
        app:layout_constraintTop_toTopOf="@+id/menuFrame" />

    <LinearLayout
        android:id="@+id/slideMenuLinear"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="107dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/menuFrame"
        app:layout_constraintTop_toTopOf="@+id/menuFrame">


        <ImageButton
            android:id="@+id/slideMenuButtonHistory"
            android:layout_width="129dp"
            android:layout_height="25dp"
            android:background="@drawable/history_selector" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/slideMenuButtonPolicy"
            android:layout_width="109dp"
            android:layout_height="25dp"
            android:background="@drawable/policy_selector" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/slideMenuButtonRating"
            android:layout_width="102dp"
            android:layout_height="25dp"
            android:background="@drawable/rating_selector" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/slideMenuButtonAbout"
            android:layout_width="81dp"
            android:layout_height="25dp"
            android:background="@drawable/about_selector" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/slideMenuButtonExit"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:background="@drawable/exit_selector" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/slideMenuLinear"
        app:layout_constraintTop_toBottomOf="@+id/slideMenuLinear"
        android:layout_marginTop="57dp"
        android:layout_marginStart="71dp">

        <ImageButton
            android:id="@+id/dialogueExit"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:background="@drawable/exit_selector" />
        <ImageButton
            android:id="@+id/dialogueStay"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:visibility="invisible"
            android:background="@drawable/stay_selector"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
