<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:background="@drawable/about_us"/>

    <ImageButton
        android:id="@+id/slideMenuButtonBack"
        android:layout_width="23dp"
        android:layout_height="17dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/back_selector"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.5" />
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="2dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_regular"
            android:text="Welcome to our online store! We offer a wide selection of delicious cakes with home delivery. Our cakes are made from high-quality ingredients and come in different flavors and sizes, so everyone can find something to their liking.

\n\nWe guarantee fast and reliable delivery anywhere in the city. Just choose the cakes you like, place an order and enjoy the taste!

\n\nIn our store you will find:

\n\nCakes with different fillings: chocolate, vanilla, strawberry, raspberry and others.
\nDifferent sizes: small, medium and large.
\nAffordable prices.
\nDon't miss the opportunity to treat yourself and your loved ones to delicious and beautiful cakes!
" /></ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>