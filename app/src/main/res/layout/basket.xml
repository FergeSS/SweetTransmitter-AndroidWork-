<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/header_basket" />

    <ImageButton
        android:id="@+id/buttonMenuSlide"
        android:layout_width="23dp"
        android:layout_height="17dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/menu_selector"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.5" />
    <TextView
        android:layout_width="122dp"
        android:layout_height="22dp"
        android:text="Added items:"
        android:textSize="18dp"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/orange"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemsBasket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="150dp"
        android:layout_marginTop="137dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageButton
        android:id="@+id/buttonCheckout"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:background="@drawable/checkout_selector"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="105dp"/>

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: 0"
        android:textSize="24dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="105dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutOrder"
        android:layout_width="390dp"
        android:layout_height="850dp"
        android:layout_marginBottom="-850dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/frameCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/frame_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:id="@+id/cardButtonClose"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/close_selector"
            android:layout_marginStart="80dp"
            app:layout_constraintStart_toEndOf="@+id/title"
            app:layout_constraintTop_toTopOf="@+id/title"
            app:layout_constraintBottom_toBottomOf="@+id/title"/>

        <ImageView
            android:id="@+id/title"
            android:layout_width="114dp"
            android:layout_height="32dp"
            android:layout_marginBottom="700dp"
            android:background="@drawable/delivery_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/frameCard" />



        <EditText
            android:id="@+id/adress"
            android:layout_width="360dp"
            android:layout_height="64dp"
            android:layout_marginTop="30dp"
            android:paddingStart="20dp"
            android:paddingTop="17dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/orange"
            android:hint="Adress"
            android:background="@drawable/big_edit"
            app:layout_constraintEnd_toEndOf="@+id/frameCard"
            app:layout_constraintStart_toStartOf="@+id/frameCard"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/adress"
            app:layout_constraintBottom_toTopOf="@+id/adress"
            android:layout_marginBottom="-12dp"

            android:text=" Indicate the city, street and house number:"
            android:textSize="12dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/orange"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            app:layout_constraintEnd_toEndOf="@+id/frameCard"
            app:layout_constraintStart_toStartOf="@+id/frameCard"
            app:layout_constraintTop_toBottomOf="@+id/adress">
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-12dp"
                    app:layout_constraintBottom_toTopOf="@+id/apartament"
                    android:text="Apartment"
                    android:textSize="12dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/orange"/>
                <EditText
                    android:id="@+id/apartament"
                    android:layout_width="100dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="30dp"
                    android:paddingStart="20dp"
                    android:paddingTop="17dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/orange"
                    android:hint="1"
                    android:inputType="number"
                    android:background="@drawable/small_edit"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entrance"
                    android:layout_marginBottom="-12dp"
                    app:layout_constraintBottom_toTopOf="@+id/entrance"
                    android:textSize="12dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/orange"/>
                <EditText
                    android:id="@+id/entrance"
                    android:layout_width="100dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="30dp"
                    android:paddingStart="20dp"
                    android:paddingTop="17dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/orange"
                    android:hint="1"
                    android:inputType="number"
                    android:background="@drawable/small_edit"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-12dp"
                    app:layout_constraintBottom_toTopOf="@+id/floor"
                    android:text="Floor"
                    android:textSize="12dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/orange"/>
                <EditText
                    android:id="@+id/floor"
                    android:layout_width="100dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="30dp"
                    android:paddingStart="20dp"
                    android:paddingTop="17dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/orange"
                    android:hint="1"
                    android:inputType="number"
                    android:background="@drawable/small_edit"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-12dp"
            android:fontFamily="@font/montserrat_semibold"

            android:text="Name"
            android:textColor="@color/orange"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@+id/name"
            app:layout_constraintStart_toStartOf="@+id/name" />

        <EditText
            android:id="@+id/name"
            android:layout_width="360dp"
            android:layout_height="64dp"
            android:layout_marginTop="15dp"
            android:paddingStart="20dp"
            android:paddingTop="17dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/orange"
            android:hint="Name"
            android:inputType="text"
            android:background="@drawable/big_edit"
            app:layout_constraintEnd_toEndOf="@+id/frameCard"
            app:layout_constraintStart_toStartOf="@+id/frameCard"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/comments"
            app:layout_constraintBottom_toTopOf="@+id/comments"
            android:layout_marginBottom="-12dp"

            android:text="Comments on the order"
            android:textSize="12dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/orange"/>

        <EditText
            android:id="@+id/comments"
            android:layout_width="360dp"
            android:layout_height="64dp"
            android:layout_marginTop="15dp"
            android:paddingStart="20dp"
            android:paddingTop="17dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/orange"
            android:hint="Some comments"
            android:inputType="text"
            android:background="@drawable/big_edit"
            app:layout_constraintEnd_toEndOf="@+id/frameCard"
            app:layout_constraintStart_toStartOf="@+id/frameCard"
            app:layout_constraintTop_toBottomOf="@+id/name" />


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="214dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/comments"
            app:layout_constraintStart_toStartOf="@+id/layoutOrder"
            app:layout_constraintEnd_toEndOf="@+id/layoutOrder"
            android:layout_marginTop="60dp">
            <RadioButton
                android:id="@+id/cash"
                android:layout_width="68dp"
                android:layout_height="40dp"
                android:textColorHint="@color/black"
                android:button="@null"
                android:background="@drawable/cash_selector" />
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <RadioButton
                android:id="@+id/cardTransfer"
                android:textColorHint="@color/black"
                android:button="@null"
                android:layout_width="131dp"
                android:layout_height="40dp"
                android:background="@drawable/transfer_selector"/>
        </LinearLayout>

        <RadioButton
            android:id="@+id/card"
            android:textColorHint="@color/black"
            android:button="@null"
            android:layout_width="169dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/card_selector"
            app:layout_constraintEnd_toEndOf="@+id/layoutOrder"
            app:layout_constraintStart_toStartOf="@+id/layoutOrder"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <TextView
            android:id="@+id/cardTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Total: 0"
            android:textColor="@color/black"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/card"
            android:layout_marginTop="20dp"
             />
        
        <ImageButton
            android:id="@+id/cardContinue"
            android:layout_width="170dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/cardTotal"
            app:layout_constraintEnd_toEndOf="@+id/layoutOrder"
            app:layout_constraintStart_toStartOf="@+id/layoutOrder"
            android:layout_marginTop="60dp"
            android:background="@drawable/continue_selector"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutOrderThx"
        android:layout_width="390dp"
        android:layout_height="850dp"
        android:layout_marginBottom="-850dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/frameCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/frame_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="299dp"
            android:layout_height="168dp"
            android:background="@drawable/group_123"
            app:layout_constraintBottom_toBottomOf="@id/layoutOrderThx"
            app:layout_constraintTop_toTopOf="@id/layoutOrderThx"
            app:layout_constraintEnd_toEndOf="@id/layoutOrderThx"
            app:layout_constraintStart_toStartOf="@+id/layoutOrderThx" />




        <ImageButton
            android:id="@+id/cardMenu"
            android:layout_width="170dp"
            android:layout_height="40dp"

            app:layout_constraintEnd_toEndOf="@+id/layoutOrderThx"
            app:layout_constraintStart_toStartOf="@+id/layoutOrderThx"
            app:layout_constraintBottom_toBottomOf="@id/layoutOrderThx"
            android:layout_marginBottom="100dp"
            android:background="@drawable/button_menu_selector"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/darkeningBasket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#512121"
        android:layout_marginBottom="-850dp"
        android:alpha="0"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>